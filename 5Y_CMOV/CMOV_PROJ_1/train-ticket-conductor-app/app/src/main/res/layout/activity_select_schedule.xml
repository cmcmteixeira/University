<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.railway.railwayconductor.activity.SelectStationsActivity">

    <TextView
        android:id="@+id/select_lbl_departure"
        android:text="@string/select_lbl_departure"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:id="@+id/select_spinner_departure"
        android:layout_below="@+id/select_lbl_departure"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/select_lbl_arrival"
        android:layout_below="@+id/select_spinner_departure"
        android:text="@string/select_lbl_arrival"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="30dp" />

    <Spinner
        android:id="@+id/select_spinner_arrival"
        android:layout_below="@+id/select_lbl_arrival"
        android:text="@string/select_lbl_arrival"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/select_lbl_date_intro"
        android:layout_below="@+id/select_spinner_arrival"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_lbl_date_intro"
        android:textSize="18sp"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/select_lbl_date"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="8pt"
        android:textColor="@android:color/black"
        android:layout_toLeftOf="@+id/select_btn_pick_date"
        android:layout_below="@+id/select_lbl_date_intro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical" />

    <ImageButton
        android:id="@+id/select_btn_pick_date"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/calendar"
        android:layout_alignTop="@+id/select_lbl_date"
        android:layout_alignRight="@+id/select_lbl_date_intro"
        android:layout_alignEnd="@+id/select_lbl_date_intro" />


    <LinearLayout
        android:id="@+id/select_layout_bottom_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_btn_proceed"
            android:id="@+id/select_btn_proceed"/>

    </LinearLayout>

</RelativeLayout>
