<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.railway.railway.activity.LoginActivity"
    android:background="@drawable/background"
    android:weightSum="1"
    android:orientation="vertical">

    <!-- Login progress -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="246dp">


        <ImageView
            android:layout_width="111dp"
            android:layout_height="151dp"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <AutoCompleteTextView android:id="@+id/register_email" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:hint="@string/prompt_email"
            android:inputType="textEmailAddress" android:maxLines="1"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="#64ffffff"
            android:backgroundTint="#ffb046"
            android:layout_below="@+id/imageView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText android:id="@+id/register_password" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:hint="@string/prompt_password"
            android:maxLines="1" android:singleLine="true"
            android:inputType="textPassword"
            android:textColorHint="#64ffffff"
            android:backgroundTint="#ffb046"
            android:textColor="#ffffff"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/register_email"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <Button android:id="@+id/email_sign_in_button" style="?android:textAppearanceSmall"
        android:layout_width="379dp" android:layout_height="wrap_content"
        android:text="@string/action_sign_in"
        android:textStyle="bold"
        android:enabled="true"
        android:gravity="center|center_vertical"
        android:background="#7dffffff"

        android:layout_above="@+id/register_button"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" />

    <Button
        style="?android:textAppearanceSmall"
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_register"
        android:textStyle="bold"
        android:clickable="true"
        android:gravity="center|center_vertical"
        android:background="#7dffffff"
        android:layout_marginTop="20dp" />

</LinearLayout>

